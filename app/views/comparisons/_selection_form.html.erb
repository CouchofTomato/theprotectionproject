<form>
  <div class="field">
    <div class="control">
      <div class="select">
        <%= select_tag "comparison_product[insurer]", options_from_collection_for_select(@insurers, "id", "name"),
          include_blank: 'Select Insurer...',
          data: { comparison_target: 'insurer',
                  action: 'change->comparison#loadProducts' }
        %>
      </div>
    </div>
  </div>
  <div class="field">
    <div id="product-select" class="control">
    </div>
  </div>
  <div id="product-modules" class="field">
  </div>
  <div class="field">
    <div class="control">
      <%= submit_tag "Load Benefits", class: 'button is-primary',
        data: { health_comparison_product_select_target: 'comparisonProductSubmit',
                comparison_product_target: 'comparisonProductSubmit',
                comparison_target: 'selectedProductSubmit',
                action: 'click->comparison#addSelectedProduct' }
              %>
    </div>
  </div>
</form>
