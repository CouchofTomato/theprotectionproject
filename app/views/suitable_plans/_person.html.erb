<div class="p-3 bg-gray-200 bg-opacity-30 rounded-lg" data-test-id="people-information-section">
  <div class="flex flex-row">
    <div class="flex flex-col justify-center">
      <%= svg_icon icon_name %>
    </div>
    <div class="w-full">
      <div class="field">
        <%= f.label 'people[][name]', 'Name', class: 'form-label' %>
        <div class="control">
          <%= f.text_field 'people[][name]', data: { test_id: 'people-name-input' }, class: 'form-input' %>
        </div>
      </div>
      <div class="field">
        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
          <div class="sm:col-span-1">
            <%= f.label 'people[][date_of_birth]', 'Date of Birth', class: 'form-label' %>
            <div class="grid grid-cols-1 sm:grid-cols-3">
              <%= f.date_select 'people[][date_of_birth]', { order: %i[day month year], start_year: 1900 }, class: 'form-select--inline' %>
            </div>
          </div>
          <div class="sm:col-span-1">
            <%= f.label 'people[][relationship]', 'Relationship', class: 'form-label' %>
            <%= f.select 'people[][relationship]', relationship_options.collect { [_1.titleize, _1] }, {}, data: { test_id: 'people-relationship-select' }, class: 'form-select--inline' %>
          </div>
        </div>
      </div>
      <div class="grid grid-cols-6 gap-6">
        <div class="col-span-6 sm:col-span-3">
          <div class="field">
            <%= f.label 'people[][nationality]', 'Nationality', class: 'form-label' %>
            <div class="control">
              <%= f.text_field 'people[][nationality]', data: { test_id: 'people-nationality-input' }, class: 'form-input' %>
            </div>
          </div>
        </div>
        <div class="col-span-6 sm:col-span-3">
          <div class="field">
            <%= f.label 'people[][country_of_residence]', 'Country of Residence', class: 'form-label' %>
            <div class="control">
              <%= f.text_field 'people[][country_of_residence]', data: { test_id: 'people-residency-input' }, class: 'form-input' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>